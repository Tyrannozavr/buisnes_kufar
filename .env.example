# Database configuration - один способ подключения
SQLALCHEMY_DATABASE_URL=postgresql://postgres:postgres@db/buisnes_kufar

# Redis configuration
REDIS_HOST=redis-cache
REDIS_PORT=6379

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Frontend URL
FRONTEND_URL=http://localhost:3001

# Dev порты (используются в docker-compose.dev.yml через подстановку)
DEV_BACKEND_PORT=8002
DEV_FRONTEND_PORT=3001
# 80 часто занят другими проектами — по умолчанию поднимаем nginx на 8080
DEV_NGINX_PORT=8080

# Frontend API config
# Рекомендовано в dev: работать через /api (прокси в Nuxt / nginx), чтобы не было CORS
VITE_PUBLIC_API_URL=/api
# Для SSR внутри docker используем прямой доступ к backend по сервису
API_BASE_URL=http://backend:8000/api
# Dev proxy target для Nuxt (vite proxy). В docker: http://backend:8000, на хосте: http://localhost:8002
NUXT_DEV_API_PROXY_TARGET=http://backend:8000

# CORS Origins
BACKEND_CORS_ORIGINS=["http://localhost:3001","http://127.0.0.1:3001","http://localhost:8080","http://127.0.0.1:8080","http://localhost","http://127.0.0.1"]

# API Key for location service
LOCATION_API_KEY=

# reCAPTCHA
RECAPTCHA_SECRET_KEY=6LdJHHorAAAAAEUE2R1s_QsmJPLR0PSCPnB1_TQy
RECAPTCHA_SITE_KEY=6LdJHHorAAAAAG2JB9CyOtRQbPJWrxbdRPy0dMHO

# S3 / MinIO (документы). При docker-compose.dev: http://minio:9000 (внутренний адрес)
S3_ENDPOINT_URL=http://minio:9000
# Для presigned URL (скачивание в браузере): адрес, доступный с хоста
S3_PUBLIC_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=admin
S3_SECRET_KEY=SuperSecret123!
S3_BUCKET=documents
S3_REGION=us-east-1
